<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="414dp"
        android:layout_height="120dp"
        android:background="#2A54D1"
        android:gravity="clip_horizontal"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:textAlignment="viewEnd">


        <TextView
            android:id="@+id/textViewAgregarArticulosTitulo"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:text="Agregar Articulos en la Orden de Compras"
            android:textColor="@color/black"
            android:textSize="30dp" />


    </LinearLayout>

    <Button
        android:id="@+id/btnAgregarArticulosCompra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="156dp"
        android:text="Agregar"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/agregarDescripcionArticulo"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/agregarSerialArticulo"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="176dp"
        android:layout_toLeftOf="@id/btnAgregarArticulosCompra"
        android:hint="Ingresa el numero serial del articulo de la orden de Compra"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <EditText
        android:id="@+id/agregarAliasArticulo"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_toLeftOf="@id/btnAgregarArticulosCompra"
        android:hint="Ingresa el alias del articulo de la orden de Compra"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/agregarSerialArticulo" />

    <EditText
        android:id="@+id/agregarDescripcionArticulo"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_toLeftOf="@id/btnAgregarArticulosCompra"
        android:hint="Ingresa una descripcion de la Orden de Compra"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/agregarAliasArticulo" />


</androidx.constraintlayout.widget.ConstraintLayout>